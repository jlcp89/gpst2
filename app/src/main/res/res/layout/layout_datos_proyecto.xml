<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_datos_proyecto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorFondo2">
    <Button
        android:id="@+id/buttonDesa"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorRojo"
        android:text="@string/instrucciones"
        android:textColor="@color/colorTextoBoton"
        android:textSize="12dp" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorFondo2">

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/id_banner"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_below="@+id/relativeLayout"
                android:layout_marginTop="5dp"></com.google.android.gms.ads.AdView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="@string/id_banner"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="17dp"
                android:layout_alignParentBottom="true"></com.google.android.gms.ads.AdView>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout3"
                android:layout_marginTop="8dp"
                android:gravity="center">


                <Button
                    android:id="@+id/buttonFace"
                    android:layout_width="60dp"
                    android:layout_height="12dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorBotonFace"
                    android:text="facebook"
                    android:textColor="@color/colorTexto"

                    android:textSize="10dp" />

                <Button
                    android:id="@+id/buttonRate"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/buttonFace"
                    android:layout_marginEnd="47dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorVerde"
                    android:text="Rate App"
                    android:textColor="@color/colorTextoBoton"
                    android:textSize="8dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:orientation="vertical"
                android:textColor="@color/colorTexto"
                android:layout_below="@+id/adView2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:background="@color/colorTexto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="3sp"
                        android:background="@color/colorFondo">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_below="@+id/fondoTitulo"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="@string/ingreso_datos_proyecto"
                            android:textSize="25sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@color/colorTexto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorFondo"
                                android:gravity="left"
                                android:text="@string/fecha"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/fecha_ingreso_datos"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="center_vertical"
                                android:padding="2dp"
                                android:textColor="@color/colorTexto" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@color/colorTexto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="104dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="clip_vertical"
                                android:layout_margin="0sp"

                                android:background="@color/colorFondo"
                                android:gravity="left"
                                android:text="@string/proyecto"
                                android:textColor="@color/colorTexto"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <EditText
                                android:id="@+id/nombre_proyecto"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="center_vertical"
                                android:hint="@string/proyecto_hint"
                                android:inputType="text"
                                android:padding="2dp"
                                android:textColor="@color/colorTexto"
                                android:textColorHint="@color/colorGris" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@color/colorTexto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="154dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="left"
                                android:text="@string/cliente"
                                android:textColor="@color/colorTexto"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <EditText
                                android:id="@+id/nombre_cliente"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="center_vertical"
                                android:hint="@string/cliente_hint"
                                android:inputType="text"
                                android:padding="2dp"
                                android:textColor="@color/colorTexto"
                                android:textColorHint="@color/colorGris" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@color/colorTexto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"

                                android:background="@color/colorFondo"
                                android:gravity="left"
                                android:text="@string/ubicacion"
                                android:textColor="@color/colorTexto"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <EditText
                                android:id="@+id/nombre_ubicacion"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="center_vertical"
                                android:hint="@string/ubicacion_hint"
                                android:inputType="text"
                                android:padding="2dp"
                                android:textColor="@color/colorTexto"
                                android:textColorHint="@color/colorGris" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"

                    android:orientation="horizontal"
                    android:textColor="@color/colorTexto">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:background="@color/colorTexto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:gravity="left"
                                android:text="@string/responsable"
                                android:textSize="15sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3sp"
                            android:background="@color/colorFondo">

                            <EditText
                                android:id="@+id/nombre_responsable"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/colorFondo"
                                android:gravity="center_vertical"
                                android:hint="@string/responsable_hint"
                                android:inputType="text"
                                android:padding="2dp"
                                android:textColor="@color/colorTexto"
                                android:textColorHint="@color/colorGris" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="1dp">

                    <Button
                        android:id="@+id/boton_guardar_datosp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorBoton"
                        android:text="@string/ir"
                        android:textColor="@color/colorTextoBoton"
                        android:textSize="17sp" />

                    <Button
                        android:id="@+id/boton_cancelar_datosp"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorBoton"
                        android:text="@string/cancelar1"
                        android:textColor="@color/colorTextoBoton"
                        android:textSize="17sp" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>

    </ScrollView>
</LinearLayout>