<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    >
    <Button
        android:id="@+id/buttonDesa"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorBotonFace"
        android:text="@string/instrucciones"
        android:textColor="@color/colorBoton"
        android:textSize="12dp" />

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/colorFondo2">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="center">


                <Button
                    android:id="@+id/buttonRate"
                    android:layout_width="45dp"
                    android:layout_height="10dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/buttonFace"
                    android:layout_marginEnd="47dp"
                    android:layout_marginLeft="20dp"
                    android:background="@color/colorVerde"
                    android:text="Rate App"
                    android:textColor="@color/colorTextoBoton"
                    android:textSize="8dp" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="vertical"
                android:textColor="@color/colorTexto"
                android:layout_above="@+id/adView6"
                android:layout_below="@+id/adView4">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:layout_weight="1"
                    android:background="@color/colorTexto"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorFondo">

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="match_parent"
                            android:layout_height="30sp"
                            android:layout_margin="1dp"
                            android:gravity="center"
                            android:text="@string/resultados"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/colorTexto"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorFondo">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:gravity="center"
                            android:text="@string/error_permisible"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorTexto">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorFondo">

                                <TextView
                                    android:id="@+id/error_cumple"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorFondo"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="@color/colorTexto"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:layout_weight="1"
                    android:background="@color/colorTexto"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorFondo">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:gravity="center"
                            android:text="@string/area"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorTexto">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorFondo">

                                <TextView
                                    android:id="@+id/valor_area"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorFondo"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="@color/colorTexto"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1.5"
                    android:background="@color/colorTexto"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorFondo">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:gravity="center"
                            android:text="@string/archivos_en"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorTexto">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorFondo">

                                <TextView
                                    android:id="@+id/ruta_archivos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorFondo"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="@color/colorTexto"
                                    android:textSize="12sp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

