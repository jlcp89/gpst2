<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorBackground">#000000</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/colorBoton</item>
        <item name="android:textColorSecondary">@color/colorGris</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBoton</item>
        <item name="colorPrimaryDark">@color/colorBoton</item>
        <item name="colorAccent">@color/colorGris</item>
    </style>
</resources>
