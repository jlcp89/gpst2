<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ingreso_dist_az"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimary">


            <LinearLayout
                android:id="@+id/linearLayout21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:textColor="@color/azul"
                android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/linearLayout211"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                android:orientation="vertical"
                android:textColor="@color/azul"
                android:layout_below="@+id/adView13"
                android:layout_centerHorizontal="true">


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRun"
                android:orientation="horizontal"
                android:layout_margin="3sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="3sp"
                android:background="@color/azul"
                android:gravity="center">
                <ImageView
                    android:id="@+id/logod3"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    ></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fondoTitulo"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@string/ingreso_distaz_est"
                    android:textSize="20sp"
                    android:textColor="@color/colorBlanco"
                    android:textStyle="bold"
                    android:backgroundTint="@color/azul"/>
            </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/texto_medicion"
                            android:textColor="@color/azul"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center">

                            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/radio_grupo_medicion"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"

                                >

                                <RadioButton
                                    android:id="@+id/radio_lindero"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/lindero"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/azul"/>

                                <RadioButton
                                    android:id="@+id/radio_radiacion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/radiacion"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/azul"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/parte_poligono_final"
                            android:textColor="@color/azul"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center">

                            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/radio_grupo_partePolFinal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_partePolFinal_si"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/si"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/colorRun"/>

                                <RadioButton
                                    android:id="@+id/radio_partePolFinal_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/no"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/colorRun"/>
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/ultimo_punto"
                            android:textColor="@color/azul"
                            android:textSize="13dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorPrimary"
                            android:gravity="center">

                            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                                android:id="@+id/radio_grupo_ultimo"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal"
                                >

                                <RadioButton
                                    android:id="@+id/radio_si"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="@string/si"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/colorRun"/>

                                <RadioButton
                                    android:id="@+id/radio_no"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:text="@string/no"
                                    android:textColor="@color/azul"
                                    android:buttonTint="@color/colorRun" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal"
                    android:layout_margin="3sp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="70dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:text="@string/est_aparato"
                            android:textSize="10sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1sp"
                                android:background="@color/colorPrimary">

                                <TextView
                                    android:id="@+id/estacion_aparato"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textSize="13sp" />
                            </LinearLayout>


                        </LinearLayout>
                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="12dp"
                            android:gravity="center"
                            android:text="@string/punto_ob"
                            android:textSize="10sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="1sp"
                                android:background="@color/colorPrimary">

                                <TextView
                                    android:id="@+id/punto_observado"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textSize="13sp" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/distancia"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/distancia_po"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:hint="0.00"
                                    android:inputType="numberDecimal"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal"
                    android:layout_margin="3sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/azimut"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="39dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/azimut_grados"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:gravity="center_vertical"
                                    android:hint="0"
                                    android:inputType="number"
                                    android:maxLength="3"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/azimut_minutos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:gravity="center_vertical"
                                    android:hint="0"
                                    android:inputType="number"
                                    android:maxLength="2"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/azimut_segundos"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="1dp"
                                    android:gravity="center_vertical"
                                    android:hint="0.00"
                                    android:inputType="numberDecimal"
                                    android:maxLength="5"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="12sp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <Button
                        android:id="@+id/boton_regresar"
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="20sp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/colorBlanco"
                        android:text="@string/boton_regresar"
                        android:textColor="@color/azul"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/boton_agregar_otro_punto"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorBlanco"
                        android:text="@string/boton_agregar_otro"
                        android:textColor="@color/azul"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/boton_cancelar_datodistaz"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorBlanco"
                        android:text="@string/cancelar1"
                        android:textColor="@color/azul"
                        android:textSize="10sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>