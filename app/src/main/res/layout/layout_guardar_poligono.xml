<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_ingreso_dist_az"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/colorPrimary">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@color/colorPrimary">



            <LinearLayout
                android:id="@+id/linearLayout21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"

                android:orientation="vertical"
                android:textColor="@color/azul"
                android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorRun"
                android:orientation="horizontal"
                android:layout_margin="3sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:background="@color/colorPrimary"
                android:gravity="center">
                <ImageView
                    android:id="@+id/logod3"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/ic_launcher"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    ></ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_below="@+id/fondoTitulo"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:text="@string/guardar_proyecto"
                    android:textSize="18sp"
                    android:textColor="@color/azul"
                    android:textStyle="bold"/>
            </LinearLayout>

            </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/fecha"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/distancia"
                            android:textSize="15sp"
                            android:textColor="@color/azul"
                            android:id="@+id/texto_guardar_pol_fecha"/>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/proyecto"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorPrimary">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/edit_proyecto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:hint="Name of your project!"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/cliente"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/edit_cliente"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:hint="Name of your client!"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/ubicacion"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/edit_ubicacion"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:hint="Project location!"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3sp"
                    android:background="@color/colorBlanco"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3sp"
                        android:background="@color/colorPrimary">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_gravity=""
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/responsable"
                            android:textSize="15sp"
                            android:textColor="@color/azul"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:background="@color/colorBlanco">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="3sp"
                                android:background="@color/colorPrimary">

                                <EditText
                                    android:id="@+id/edit_responsable"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center_vertical"
                                    android:hint="Your name!"
                                    android:inputType="text"
                                    android:padding="2dp"
                                    android:textColor="@color/azul"
                                    android:textColorHint="@color/colorGris"
                                    android:textSize="14sp" />
                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">


                    <Button
                    android:id="@+id/boton_guardar_poligono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="20sp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorBoton"
                    android:text="@string/boton_regresar"
                    android:textColor="@color/azul"
                    android:textSize="11sp" />



                    <Button
                        android:id="@+id/boton_cancelar_17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginStart="20sp"
                        android:layout_marginTop="5dp"
                        android:background="@color/colorBoton"
                        android:text="@string/cancelar1"
                        android:textColor="@color/azul"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>
</LinearLayout>